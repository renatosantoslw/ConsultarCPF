@page
@using CoreAPI.wwwroot.Pages
@model IndexNomeModel
@{
    ViewData["Title"] = "ConsultaNome";
    bool mostrarModal = false;
    bool mostrarAlerta = false;
    bool mostrarCarregando = true;

    string DescricaoModal = string.Empty;
    string DescricaoAlerta = string.Empty;
    string CorAlerta = string.Empty;


    if (Model.Status == "0")
    {
       
        mostrarModal = true;
        DescricaoModal = "Nome não localizado em nenhuma das base de dados.";
        DescricaoAlerta = "Nome não localizado em nenhuma das base de dados.";
        CorAlerta = "alert alert-warning";
        mostrarAlerta = true;
    }

    if (Model.Status == "1")
    {
        
        DescricaoAlerta = "Nome localizado na Base de Dados.";
        CorAlerta = "alert alert-success";
        mostrarAlerta = true;
        Model.Status = string.Empty;
    }
}



<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Consulta de Pessoas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/funcoes.js"></script>
    <script>
        window.mostrarCarregando = @Html.Raw(mostrarCarregando.ToString().ToLower());
        window.mostrarModal = @Html.Raw(mostrarModal.ToString().ToLower());
        window.mostrarAlerta = @Html.Raw(mostrarAlerta.ToString().ToLower());
    </script>
</head>
<body>
    <div class="container">
        <div class="container mt-5">
            <center><a href="\nome" class="link-sem-sublinhado"><h3>Consulte seu Nome</h3></a></center>
         
                <!-- Formulário de Pesquisa -->
            <form id="nomeForm" method="get" action="/nome">
                 <div class="form-group">
                    <label style="font-size:16px;" for="Nome">NOME</label>
                    <input asp-for="Nome" id="Nome" name="Nome" type="text" class="form-control" placeholder="Digite o Nome completo" value="@Model.Nome" />
                 </div>
                 <button id="submitButton" name="action" value="submit" type="submit" class="btn btn-primary btn-block">Buscar</button>
            </form>
            <br>
          
            <a href="/" class="btn btn-primary btn-block">Consultar por CPF</a>
            <!-- Modal de CPF não Localizado -->
            <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title fs-4" id="exampleModalSmLabel">
                                <img src='@Url.Content("~/images/warning-icon.png")' alt="Ícone" style="width: 32px; height: 32px; margin-right: 10px;">
                                Consulta
                            </h3>
                        </div>
                        <div class="modal-body">
                            @DescricaoModal
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal" id="modal-loading" data-backdrop="static">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-body text-center">
                            <div class="loading-spinner mb-2"></div>
                            <div>Carregando...</div>
                        </div>
                    </div>
                </div>
            </div>

            <br>
            <!-- Dados -->
            <div id="result" class="panel panel-default">
                <div class="panel-heading">Dados</div>
                <!-- Resultados da Pesquisa -->
                @if (Model._Pessoas != null && Model._Pessoas.Any())
                {
                    <div class="table-responsive">
                  
                        <table class="table table-striped">
                                <thead>
                                    <tr>
                                    <th class="thNome">Nome</th>
                                        <th>CPF</th>
                                        <th>Gênero</th>
                                        <th>Nascimento</th>                          
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pessoa in Model._Pessoas)
                                    {
                                        <tr>
                                        <td>@pessoa.Nome</td>
                                            <td>@pessoa.CPF</td>
                                            <td>@pessoa.Genero</td>
                                            <td>@pessoa.DataNascimento</td> 
                                                 <td>
                                                <!-- Link com a URL dinâmica -->
                                                <a href="/?CPF=@pessoa.CPF&action=submit" class="btn btn-info btn-sm">+</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                        </table>
                    </div>
                    
                    <hr>

                    <nav aria-label="Page navigation">
                        <ul class="pagination">

                            <!-- Botão Anterior -->
                            @{
                                var prevPageUrl = Model.CurrentPage == 1 ? "#" : $"?Nome={Model.Nome}&PageNumber={Model.CurrentPage - 1}";
                                var prevPageClass = Model.CurrentPage == 1 ? "disabled" : "";
                            }
                            <li class="page-item @(prevPageClass)">
                                <a class="page-link" href="@prevPageUrl">Anterior</a>
                            </li>







                            @if (Model.TotalPages > 1)
                            {

                                // Mostrar a primeira página e os três botões mais próximos da página atual
                                if (Model.CurrentPage > 4)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?Nome=@Model.Nome&PageNumber=1">1</a>
                                    </li>
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                        <a class="page-link" href="?Nome=@Model.Nome&PageNumber=@i">@i</a>
                                    </li>
                                }

                                // Mostrar a última página e os três botões mais próximos da página atual
                                if (Model.CurrentPage < Model.TotalPages - 3)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="?Nome=@Model.Nome&PageNumber=@Model.TotalPages">@Model.TotalPages</a>
                                    </li>
                                }
                            }


                            <!-- Botão Próximo -->
                            @{
                                var nextPageUrl = Model.CurrentPage >= Model.TotalPages ? "#" : $"?Nome={Model.Nome}&PageNumber={Model.CurrentPage + 1}";
                                var nextPageClass = Model.CurrentPage >= Model.TotalPages ? "disabled" : "";
                            }
                            <li class="page-item @(nextPageClass)">
                                <a class="page-link" href="@nextPageUrl">Próximo</a>
                            </li>




                        </ul>
                    </nav>               
                
                }
                else
                {
                   // <p class="mt-3">Nenhum resultado encontrado.</p>
                }
            </div>

            <!-- Mensagem Rodape -->
            <div id="Alerta" class="@CorAlerta" role="alert" hidden="hidden">
                @DescricaoAlerta
            </div>
        </div>
    </div>

</body>
</html>
